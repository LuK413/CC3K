ctest: testmain.o item.o potion.o gold.o barriersuit.o
	g++ -std=c++14 -Werror=vla -g testmain.o item.o potion.o gold.o barriersuit.o -o ctest

item.o: item.cc item.h
	g++ -std=c++14 -Werror=vla -c item.cc

potion.o: potion.cc item.h potion.h
	g++ -std=c++14 -Werror=vla -c potion.cc

gold.o: gold.cc item.h gold.h
	g++ -std=c++14 -Werror=vla -c gold.cc

barriersuit.o: barriersuit.cc item.h barriersuit.h
	g++ -std=c++14 -Werror=vla -c barriersuit.cc

testmain.o: testmain.cc item.h
	g++ -std=c++14 -Werror=vla -c testmain.cc

.Phony: clean

clean:
	rm *.o ctest
